{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start-storybook": "start-storybook -p 6006",
    "build-storybook": "rimraf build && build-storybook -o build",
    "watch-storybook": "concurrently \"npm:start-storybook\" \"npm:watch\"",
    "deploy-storybook": "yarn build-all && yarn build-storybook && yarn deploy-built-storybook",
    "deploy-built-storybook": "gh-pages -d build",
    "link-and-build": "lerna link && yarn lerna run build",
    "build-all": "yarn clean-all && yarn pre-build-check && lerna run build && yarn post-build-check",
    "build-all-no-clean": "yarn check-deps-match && yarn check-imports && lerna run build && yarn check-builds",
    "clean-all": "lerna run clean",
    "publish-all": "lerna publish --exact && yarn build-storybook && yarn deploy-built-storybook",
    "check-all": "yarn lint && yarn check-deps-match && yarn check-imports && yarn check-circular-deps && yarn check-circular-deps-stories && yarn bundlesize && yarn check-builds && yarn check-prettier && yarn test",
    "pre-build-check": "yarn lint && yarn check-deps-match && yarn check-imports && yarn check-prettier",
    "post-build-check": "yarn check-circular-deps && yarn check-circular-deps-stories && yarn bundlesize && yarn test && yarn check-builds",
    "watch": "lerna exec --parallel -- rollup -c -w",
    "prerelease": "yarn build-all && yarn check-deps-match && yarn check-builds && yarn test",
    "lint": "eslint --ignore-path .gitignore \"packages/**/src/**/*.ts*\"",
    "test": "jest --config=jest.config.js",
    "check-deps-match": "node scripts/check-deps-match.js",
    "check-builds": "node scripts/check-builds.js",
    "check-imports": "node scripts/check-imports.js",
    "check-prettier": "prettier -l 'packages/**/src/**/*.ts?(x)' --ignore-path .gitignore",
    "prettier": "prettier --write 'packages/**/src/**/*.ts?(x)' --ignore-path .gitignore",
    "check-circular-deps": "find ./packages -type d -name dist | xargs yarn madge --circular --extensions js",
    "check-circular-deps-stories": "find ./packages -type f -name '*.stories.tsx' | xargs yarn madge --circular --extensions tsx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StenaIT/stenajs-webui.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/StenaIT/stenajs-webui/issues"
  },
  "homepage": "https://github.com/StenaIT/stenajs-webui#readme",
  "devDependencies": {
    "@dump247/storybook-state": "^1.5.2",
    "@storybook/addon-a11y": "^5.2.5",
    "@storybook/addon-actions": "^5.2.5",
    "@storybook/addon-contexts": "^5.2.5",
    "@storybook/addon-info": "^5.2.5",
    "@storybook/addon-knobs": "^5.2.5",
    "@storybook/addon-notes": "^5.2.5",
    "@storybook/addon-storysource": "^5.2.5",
    "@storybook/addon-viewport": "^5.2.5",
    "@storybook/addons": "^5.2.5",
    "@storybook/react": "^5.2.5",
    "@storybook/theming": "^5.2.5",
    "@svgr/rollup": "^4.2.0",
    "@testing-library/react": "^8.0.5",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.0",
    "@types/storybook__addon-info": "^4.1.2",
    "@types/storybook__react": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-eslint": "9.x",
    "babel-loader": "^8.0.5",
    "@babel/core": "^7.6.4",
    "bundlesize": "^0.18.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "enzyme-adapter-react-16": "^1.13.1",
    "eslint": "6.1.0",
    "eslint-config-react-app": "5.0.1",
    "eslint-plugin-flowtype": "4.2.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-react-hooks": "2.2.0",
    "gh-pages": "^2.0.1",
    "glob": "^7.1.4",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lerna": "^3.13.4",
    "lint-staged": "^9.0.0",
    "madge": "^3.4.4",
    "prettier": "^1.17.0",
    "react-docgen-typescript-loader": "^3.1.0",
    "rollup": "^1.11.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-typescript2": "^0.21.0",
    "rollup-plugin-url": "^2.2.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1"
  },
  "bundlesize": [
    {
      "path": "./packages/calendar/dist/*.js",
      "maxSize": "15 kB"
    },
    {
      "path": "./packages/core/dist/*.js",
      "maxSize": "8 kB"
    },
    {
      "path": "./packages/elements/dist/*.js",
      "maxSize": "10 kB"
    },
    {
      "path": "./packages/forms/dist/*.js",
      "maxSize": "10 kB"
    },
    {
      "path": "./packages/grid/dist/*.js",
      "maxSize": "6 kB"
    },
    {
      "path": "./packages/input-mask/dist/*.js",
      "maxSize": "6 kB"
    },
    {
      "path": "./packages/modal/dist/*.js",
      "maxSize": "6 kB"
    },
    {
      "path": "./packages/panels/dist/*.js",
      "maxSize": "6 kB"
    },
    {
      "path": "./packages/redux/dist/*.js",
      "maxSize": "3 kB"
    },
    {
      "path": "./packages/select/dist/*.js",
      "maxSize": "5 kB"
    },
    {
      "path": "./packages/theme/dist/*.js",
      "maxSize": "2 kB"
    },
    {
      "path": "./packages/tooltip/dist/*.js",
      "maxSize": "4 kB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "resolutions": {
    "react": "16.11.0",
    "@types/react": "16.8.19",
    "@types/react-dom": "16.8.4"
  }
}
